<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AutoServiceMobil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AutoServiceMobil.Views">

    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent
        Route="RegisterPage"
        ContentTemplate="{DataTemplate views:RegisterPage}" />

    <ShellContent
        Route="HomePage"
        ContentTemplate="{DataTemplate views:HomePage}" />

    <ShellContent
        Route="AppointmentsPage"
        ContentTemplate="{DataTemplate views:AppointmentsPage}" />

    <ShellContent
        Route="CreateAppointmentPage"
        ContentTemplate="{DataTemplate views:CreateAppointmentPage}" />

    <ShellContent
        Route="AdminMecaniciPage"
        ContentTemplate="{DataTemplate views:AdminMecaniciPage}" />

    <ShellContent
        Route="EditAppointmentPage"
        ContentTemplate="{DataTemplate views:EditAppointmentPage}" />

</Shell>