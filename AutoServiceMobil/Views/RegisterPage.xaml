<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoServiceMobil.Views.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Înregistrare">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Creează un cont"
                   FontSize="28"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <Entry x:Name="NumeEntry"
                   Placeholder="Nume"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="PrenumeEntry"
                   Placeholder="Prenume"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="TelefonEntry"
                   Placeholder="Telefon"
                   Keyboard="Telephone"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="ParolaEntry"
                   Placeholder="Parola"
                   IsPassword="True"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="ConfirmParolaEntry"
                   Placeholder="Confirmă parola"
                   IsPassword="True"
                   ClearButtonVisibility="WhileEditing" />

            <Button Text="Creează cont"
                    HeightRequest="50"
                    BackgroundColor="#1E88E5"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnRegisterClicked" />

            <Button Text="Ai deja cont? Autentifică-te"
                    BackgroundColor="Transparent"
                    TextColor="#1E88E5"
                    Clicked="OnLoginRedirectClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>