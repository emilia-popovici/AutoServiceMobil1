<ContentPage
    x:Class="AutoServiceMobil.Views.EditMecanicPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Editează mecanic"
    Shell.NavBarIsVisible="True">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="NumeEntry"
               Placeholder="Nume" />

        <Entry x:Name="PrenumeEntry"
               Placeholder="Prenume" />

        <Entry x:Name="PozaEntry"
               Placeholder="URL poză" />

        <Entry x:Name="RatingEntry"
               Placeholder="Rating (0-5)"
               Keyboard="Numeric" />

        <Button Text="Salvează modificările"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="8"
                Clicked="OnSaveClicked" />

    </VerticalStackLayout>

</ContentPage>