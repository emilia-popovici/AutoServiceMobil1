<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AutoServiceMobil.Views.AppointmentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Programările mele">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Text="Adaugă programare"
                Clicked="OnAddClicked"
                BackgroundColor="#2196F3"
                TextColor="White" />

        <CollectionView
            x:Name="AppointmentsCollectionView"
            SelectionMode="Single"
            SelectionChanged="OnAppointmentTapped">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10" BorderColor="#ccc">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding ServiceName}" FontAttributes="Bold" />
                                <Label Text="{Binding MechanicName}" />
                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy HH:mm}'}" />
                            </VerticalStackLayout>

                            <ImageButton
                                Grid.Column="1"
                                Source="delete.png"
                                Clicked="OnDeleteClicked"
                                BindingContext="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>