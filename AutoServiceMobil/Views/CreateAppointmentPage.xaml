<ContentPage
    x:Class="AutoServiceMobil.Views.CreateAppointmentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Creează programare"
    Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Serviciu" FontAttributes="Bold" />
            <Picker x:Name="ServicePicker"
                    Title="Alege serviciul"
                    ItemDisplayBinding="{Binding Nume}"
                    SelectedIndexChanged="OnSelectionChanged" />

            <Label Text="Mecanic" FontAttributes="Bold" />
            <Picker x:Name="MechanicPicker"
                    Title="Alege mecanicul"
                    ItemDisplayBinding="{Binding Nume}"
                    SelectedIndexChanged="OnSelectionChanged" />

            <Label Text="Data" FontAttributes="Bold" />
            <DatePicker x:Name="DatePicker"
                        MinimumDate="{x:Static sys:DateTime.Today}"
                        DateSelected="OnDateChanged" />

            <Label Text="Ora" FontAttributes="Bold" />
            <Picker x:Name="TimePicker"
                    Title="Alege ora" />

            <Button Text="Salvează programarea"
                    HeightRequest="50"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnSaveClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>